<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NewsCompose" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary_blue</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="splashScreenIconSize">200dp</item>
        <item name="windowSplashScreenBackground">@color/primary_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_background</item>
        <item name="postSplashScreenTheme">@style/Theme.NewsCompose</item>
    </style>

</resources>